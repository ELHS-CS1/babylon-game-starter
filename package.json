{
  "name": "babylon-multiplayer-game",
  "version": "1.0.0",
  "description": "Multiplayer Babylon.js game with datastar and Vuetify",
  "type": "module",
  "private": true,
  "scripts": {
    "// === CORE WORKFLOW SCRIPTS ===": "",
    "postinstall": "./scripts/setup-certs.sh",
    "install:all": "npm install",
    "build": "npm run lint:fix && npm run build:client && npm run build:server",
    "build:deploy": "npm run build:client:deploy && npm run build:server:deploy",
    "build:client": "npm run lint:fix && vite build",
    "build:client:deploy": "vite build",
    "build:server": "npm run lint:fix && tsc -p src/server/tsconfig.json",
    "build:server:deploy": "tsc -p src/server/tsconfig.json --noEmitOnError false",
    "dev": "./scripts/kill-all.sh && vite",
    "dev:client": "vite",
    "dev:server": "tsc -p src/server/tsconfig.json && concurrently \"tsc --watch -p src/server/tsconfig.json\" \"nodemon dist/server/index.js\"",
    "dev:full": "./scripts/kill-all.sh && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "./scripts/kill-all.sh && npm run lint && npm run build && node dist/server/index.js",
    "start:prod": "./scripts/kill-all.sh && npm run lint && NODE_ENV=production PROD=true npm run build && node dist/server/index.js",
    "start:local": "./scripts/kill-all.sh && npm run lint && NODE_ENV=development npm run build && node src/server/dist/index.js",
    "// === DOCKER SCRIPTS ===": "",
    "docker:build": "docker build -t babylon-game-node22 .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t babylon-game-dev .",
    "docker:run": "docker run -p 10000:10000 babylon-game-node22",
    "docker:run:dev": "docker run -p 10000:10000 -p 5173:5173 -v $(pwd):/app babylon-game-dev",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "// === TESTING SCRIPTS ===": "",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:local": "playwright test --config=playwright.config.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:push": "node scripts/test-push-notifications.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:build": "vitest run tests/build.test.ts",
    "test:build:clean": "npm run clean:build && npm run test:build",
    "test:peers:local": "playwright test tests/peer-connections.spec.ts --config=playwright.config.ts",
    "test:peers:local:script": "node scripts/test-peer-connections-local.js",
    "test:canvas": "playwright test tests/canvas-rendering.spec.ts --config=playwright.config.ts",
    "test:canvas:headed": "playwright test tests/canvas-rendering.spec.ts --config=playwright.config.ts --headed",
    "// === GDC REPORTING ===": "",
    "report:generate": "node scripts/generate-gdc-report.js generate",
    "report:generate:48h": "node scripts/generate-gdc-report.js generate 48",
    "report:generate:pdf": "node scripts/generate-gdc-report.js generate 24 pdf",
    "report:list": "node scripts/generate-gdc-report.js list",
    "report:stats": "node scripts/generate-gdc-report.js stats",
    "report:cleanup": "node scripts/generate-gdc-report.js cleanup",
    "report:export": "node scripts/generate-gdc-report.js export",
    "report:health": "node scripts/generate-gdc-report.js health",
    "report:help": "node scripts/generate-gdc-report.js help",
    "// === QUALITY ASSURANCE ===": "",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "qa": "npm run type-check && npm run lint && npm run test:unit:run",
    "qa:full": "npm run clean && npm run install:all && npm run qa && npm run test:e2e",
    "ci": "npm run qa:full",
    "// === CLEANUP & UTILITIES ===": "",
    "kill": "./scripts/kill-all.sh",
    "cleanup:browsers": "./scripts/cleanup-browsers.sh",
    "clean": "npm run clean:build && npm run clean:deps",
    "clean:build": "rm -rf dist build coverage playwright-report test-results",
    "clean:deps": "rm -rf node_modules package-lock.json",
    "fresh": "npm run clean && npm run install:all",
    "// === DOCKER & DEPLOYMENT ===": "",
    "docker": "npm run docker:build",
    "docker:test": "npm run docker:build && npm run docker:run",
    "deploy": "npm run build && npm run test:all",
    "deploy:render": "npm run build && echo 'Ready for Render.com deployment'",
    "// === DEVELOPMENT TOOLS ===": "",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit",
    "deps:fix": "npm audit fix",
    "size": "npm run build && du -sh dist/",
    "// === GAME-SPECIFIC SCRIPTS ===": "",
    "game:dev": "npm run dev:full",
    "game:test": "npm run test:e2e",
    "game:build": "npm run build",
    "game:start": "npm run start",
    "game:test:peers": "node scripts/test-peer-connections.js",
    "// === CUSTOM TEST SCRIPTS ===": "",
    "test:peers": "node scripts/test-peer-connections.js",
    "test:integration": "npm run test:peers && npm run test:e2e",
    "// === HELP & INFORMATION ===": "",
    "help": "npm run help:scripts",
    "help:scripts": "echo '\\n=== Babylon.js Multiplayer Game Scripts ===\\n' && npm run | grep -E '^  [a-z]' | head -20 && echo '\\nRun \"npm run help:all\" for complete list'",
    "help:all": "npm run | grep -E '^  [a-z]' | sort",
    "info": "npm run info:project && npm run info:deps",
    "info:project": "echo '\\n=== Project Information ===' && echo 'Name: $(npm pkg get name | tr -d \",\")' && echo 'Version: $(npm pkg get version | tr -d \",\")' && echo 'Node: $(node --version)' && echo 'NPM: $(npm --version)'",
    "info:deps": "echo '\\n=== Dependencies ===' && npm ls --depth=0"
  },
  "keywords": [
    "babylonjs",
    "multiplayer",
    "datastar",
    "vuetify",
    "typescript",
    "vite"
  ],
  "author": "SIGMA PRODUCTIONS",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@babylonjs/core": "^8.28.1",
    "@babylonjs/gui": "^8.28.1",
    "@babylonjs/havok": "^1.3.10",
    "@babylonjs/loaders": "^8.28.1",
    "@babylonjs/materials": "^8.28.1",
    "@mdi/font": "^7.4.47",
    "@starfederation/datastar-sdk": "^1.0.0-RC.1",
    "date-fns": "^4.1.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "node-fetch": "^3.3.2",
    "vue": "^3.4.0",
    "vuetify": "3.9.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@babylonjs/inspector": "^8.31.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/tsconfig": "^0.5.0",
    "concurrently": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^10.0.0",
    "jsdom": "^26.0.0",
    "nodemon": "^3.0.0",
    "puppeteer": "^24.23.0",
    "sass": "^1.93.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^1.0.0"
  }
}
